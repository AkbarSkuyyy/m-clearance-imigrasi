rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow officers and admins to read all user files (for verification)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null &&
        (request.auth.token.role == 'officer' || request.auth.token.role == 'admin');
    }

    // Allow admins to write to any location
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}